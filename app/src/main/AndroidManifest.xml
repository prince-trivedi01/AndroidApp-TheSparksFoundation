<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thesparksfoundation.sparksfoundation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/login_activity_label" />
        <activity
            android:name=".SignUpActivity"
            android:label="@string/sign_up_activity_label" />
        <activity
            android:name=".PersonalDetailActivity"
            android:label="@string/personal_details_activity_label" />
        <activity android:name=".EducationalDetailsActivity" />
        <activity android:name=".ViewPagerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>